
<!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('../assets/home-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1> Hello and welcome to my blog! </h1>
                        <hr class="small">
                        <span class="subheading">See here: Posts of selected articles and translations I wrote</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

<!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <% @posts.each do |post| %>
            <div class="post-preview">
             <h2 class="post-title"> <%= link_to post.title, post %> </h2>
             <h3 class="post-subtitle"> <%= post.content.html_safe %> </h3>
             <% if user_signed_in? %>
              <p> <%= link_to "Edit post", edit_post_path(post) %> | <%= link_to "Delete post", post, :data => {:confirm => "Are you sure?"}, :method => :delete %> </p>
              <%end%>
              </div>
            <% end %>

                
              
                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                        <a href="#">Older Posts &rarr;</a>
                    </li>
                </ul>
                <%= will_paginate @posts %>
            </div>
        </div>
    </div>

    <hr>

   <% if user_signed_in? %>
   <p> <%= link_to "Create new post", new_post_path %> </p>
   <% end %>

